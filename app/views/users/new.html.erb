<div class="registration-page">
  <div class="registration-form">
    <div class="title">
      Create Account
    </div>
    <%= render "shared/errors", :errors => @user.errors.full_messages %>
    <%= form_for @user, url: users_path, method: :post, :html => { :class => 'no-turboboost' } do |f|%>
      <div class="form-group">
        <label htmlFor="input-email">Email Address</label>
        <%= f.text_field :email, id: 'input-email', class: 'form-control', placeholder: "example@gmail.com" %>
      </div>

      <div class="form-group">
        <label htmlFor="input-email">First Name</label>
        <%= f.text_field :first_name, id: 'input-first-name', class: 'form-control', placeholder: "First Name" %>
      </div>

      <div class="form-group">
        <label htmlFor="input-email">Last Name</label>
        <%= f.text_field :last_name, id: 'input-last-name', class: 'form-control', placeholder: "Last Name" %>
      </div>

      <div class="form-group">
        <label htmlFor="input-password">Password</label>
        <%= f.password_field :password, id: 'input-password', class: 'form-control', autocomplete: "off", placeholder: "Password" %>
      </div>

      <div class="form-group">
        <label htmlFor="input-password">Password</label>
        <%= f.password_field :password_confirmation, id: 'input-password-confirmation', class: 'form-control', autocomplete: "off", placeholder: "Password Confirmation" %>
      </div>

      <div class="form-group">
        <label htmlFor="input-password">Jira Username</label>
        <%= f.text_field :jira_username, id: 'input-jira-username', class: 'form-control', autocomplete: "off", placeholder: "Jira Username" %>
      </div>

      <div class="form-group">
        <label htmlFor="input-password">Jira Password</label>
        <%= f.password_field :jira_password, id: 'input-jira-password', class: 'form-control', autocomplete: "off", placeholder: "Jira Password" %>
      </div>

      <div class="col-xs-6 submit-btn">
          <%= f.submit 'SIGN IN', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class="login">
      <%= link_to "Already have an account? Login here", new_session_path %>
    </div>
  </div>
</div>
